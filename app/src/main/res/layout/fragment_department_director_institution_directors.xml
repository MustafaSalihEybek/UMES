<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.departmentdirector.DepartmentDirectorInstitutionDirectorsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/recyclerTopBgColor"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/department_director_institution_directors_fragment_topTitles"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:textAlignment="center"
            android:text="Adı"
            android:textColor="@color/recyclerTopTxtColor"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:layout_marginEnd="5dp"
            android:layout_weight="1.4"
            android:fontFamily="@font/poppins_medium"
            android:text="Soyadı"
            android:textColor="@color/recyclerTopTxtColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.8"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:text="Kurumu"
            android:textColor="@color/recyclerTopTxtColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.7"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:text="İşlem"
            android:textColor="@color/recyclerTopTxtColor"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/department_director_institution_directors_fragment_topTitles"
        android:id="@+id/department_director_institution_directors_fragment_recyclerView"
        android:layout_height="match_parent"/>

</RelativeLayout>