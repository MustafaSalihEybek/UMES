<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="memberactivation"
            type="com.codecanyon.umes.model.deparmentdirector.MemberActivationDepartmentDirector" />
    </data>

<LinearLayout
    android:orientation="horizontal"
    android:weightSum="5"
    android:gravity="center_vertical"
    android:background="@color/itemBgColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="@{memberactivation.teacherName}"
        android:textColor="@color/itemTxtColor"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:textAlignment="center"
        android:text="@{memberactivation.teacherSurname}"
        android:textColor="@color/itemTxtColor"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:textAlignment="center"
        android:text="@{memberactivation.teacherEmail}"
        android:textColor="@color/itemTxtColor"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:textAlignment="center"
        android:text="@{String.valueOf(memberactivation.teacherIsActive)}"
        android:textColor="@color/itemTxtColor"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/department_director_members_activation_item_btnDetails"
        android:layout_weight="0.9"
        android:src="@drawable/detail_btn"
        android:layout_height="wrap_content"/>

</LinearLayout>

</layout>