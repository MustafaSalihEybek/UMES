<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SignInFragment">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/sign_in_fragment_imgTop"
        android:src="@drawable/login_top_bg"
        android:layout_height="215dp"/>

    <ImageView
        android:layout_width="110dp"
        android:id="@+id/sign_in_fragment_imgLogo"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ksu_logo"
        android:layout_height="110dp"/>

    <ImageView
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sign_in_fragment_imgLogo"
        android:src="@drawable/login_title"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/sign_in_fragment_imgTop"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/editTxtColor"
            android:hint="Kullanıcı adı"
            android:textSize="17sp"
            android:id="@+id/sign_in_fragment_editUserId"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/edit_bg"
            android:textColorHint="@color/editTxtColor"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/editTxtColor"
            android:hint="Şifre"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:id="@+id/sign_in_fragment_editUserPassword"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/edit_bg"
            android:textColorHint="@color/editTxtColor"
            android:layout_height="50dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:id="@+id/sign_in_fragment_spinnerLoginType"
            android:background="@drawable/edit_bg"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Şifremi Unuttum"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/forgotPasswordTxtColor"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="-5dp"
                android:background="@color/forgotPasswordTxtColor"
                android:layout_height="2dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="250dp"
            android:scaleType="fitXY"
            android:id="@+id/sign_in_fragment_btnLogin"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_btn"
            android:layout_height="60dp"/>

    </LinearLayout>

</RelativeLayout>